/**index.wxss**/
@import "../../common.wxss";






.card_wrap {
  background: #f2f2f6;
  position: relative;
  width: 100%;
  height: 100%
}
.card_wrap .card_item {
  position: absolute;
  width: 80%;
}


.card_wrap .card_item .buy_btn {
  position: absolute;
  bottom: 43px;
  left: 50%;
  margin-left: -65px;
}
.card_wrap .card_item span.change_icon image {
  position: absolute;
  width: 35px;
  height: 11px;
  top: 24px;
  left: 50%;
  margin-left: -17px;
  box-shadow:none;

}
.card_wrap .card_item .card_info {
  position: absolute;
  height: 94px;
  width: 80%;
  border: 1px #E3E3E3 solid;
}
.card_wrap .card_item .card_info .card_info_mes_title {
  font-size: 18px;
  line-height: 24px;
  margin-left: 28px;
  position: absolute;
  top: -12px;
  color: #9932CC;
}
.card_wrap .card_item .card_info .card_info_mes_item {
  margin-left: 28px;
  display: block;
  font-size: 12px;
  line-height: 24px;
  color: #9932CC;
}



.card_wrap .card_item.card {
  /*top: 62px;
  left: 25px;*/
  background-color: #fce6ff;
  transform: translateY(60px) translateX(25px);
  border: outset 1px #ffffff ;
  z-index: 3
}
.card_wrap .card_item.card .card_info {
  top: 270px;
  left: 20px;
  /*transform: translateY(270px) translateX(20px);*/
}


.card_wrap .card_item.card1 {
  transform: translateY(60px) translateX(25px);
  z-index: 4
}
.card_wrap .card_item.card1 .card_info {
  top: 270px;
  left: 20px;
}
.card_wrap .card_item.card2 {
  z-index: 3;
  transform: translateY(40px) translateX(41px);
}
.card_wrap .card_item.card2 .card_info {
  top: 195px;
  left: 14px;
}

.card_wrap .card_item.card3 {
  transform: translateY(20px) translateX(51px);
  z-index: 2;
}

.card_wrap .card_item.card3 .card_info {
  top: 73px;
  left: 50px;
}

.card_wrap .card_item image {
  display: block;
  width: 100%;
  height: 430px;
  border-radius: 6px;
}




.cardTitle {
  font-size: 20px;
  font-family:  Verdana, Geneva, Tahoma, sans-serif;
  color: #9932CC;
}



.cardInfoMes{
  font-size: 16px;
  font-family:  Verdana, Geneva, Tahoma, sans-serif;
  color: #9932CC;
}






















